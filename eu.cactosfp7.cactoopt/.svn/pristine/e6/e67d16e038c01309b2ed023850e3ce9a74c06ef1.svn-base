package eu.cactosfp7.cactoopt.models;

import java.util.ArrayList;
import java.util.List;

/**
 * Optimisation plan lists recommended actions (e.g., intial placement, virtual machine migration)
 * @author jakub
 *
 */
public class OptimisationPlan {
	/**
	 * List of optimisation actions
	 */
	private List<OptimisationAction> optimisationActions = new ArrayList<OptimisationAction>();
	
	/**
	 * Adds new optimisation action to optimisation plan
	 * @param action New optimisation action
	 */
	public void AddOptimisationAction(OptimisationAction action) {
		this.optimisationActions.add(action);
	}
}
